<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    >

    <RelativeLayout
        android:id="@+id/activity_chang_pwd_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_actionbar"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/activity_change_pwd_iv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/takeout_ic_back_pressed"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/text_color_white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/activity_change_pwd_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_x"
        android:background="@color/line_q"
        android:layout_below="@+id/activity_chang_pwd_actionbar"
        />
    <EditText
        android:id="@+id/activity_change_pwd_et_oldpwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/line_qq"
        android:layout_margin="20dp"
        android:hint="旧密码"
        android:textSize="@dimen/textsize_x"
        android:paddingLeft="10dp"
        android:layout_below="@+id/activity_change_pwd_line_1"
        />
    <EditText
        android:id="@+id/activity_change_pwd_et_newpwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/line_qq"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="新密码"
        android:textSize="@dimen/textsize_x"
        android:paddingLeft="10dp"
        android:layout_below="@+id/activity_change_pwd_et_oldpwd"
        />
    <EditText
        android:id="@+id/activity_change_pwd_et_newpwdagin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/line_qq"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="重复新密码"
        android:textSize="@dimen/textsize_x"
        android:paddingLeft="10dp"
        android:layout_below="@+id/activity_change_pwd_et_newpwd"
        />

    <Button
        android:id="@+id/activity_change_pwd_bt_okchange"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="修改"
        android:textSize="@dimen/textsize_x"
        android:textColor="@color/text_color_white"
        android:background="@drawable/shape_sure_btn_blue"
        android:layout_margin="20dp"
        android:layout_below="@+id/activity_change_pwd_et_newpwdagin"
        />
</RelativeLayout>
