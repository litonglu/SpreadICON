<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/activity_popularize_rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_actionbar"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/activity_popularize_iv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/takeout_ic_back_pressed"
            android:layout_centerVertical="true"
            />
<ImageView
    android:id="@+id/popularize_iv_temp"
    android:layout_width="0dp"
    android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/textsize_actionbar"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/activity_popularize_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_x"
            android:layout_marginRight="14dp"
            />
    </RelativeLayout>


<LinearLayout
    android:id="@+id/activity_popularize_ll_1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_below="@+id/activity_popularize_rl_actionbar"
    android:layout_marginTop="10dp"

    >
<com.wangdao.our.spread_2.slide_widget.CircleImageView
    android:id="@+id/activity_popularize_iv_icon"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginLeft="15dp"
    app:border_color="@color/transparent"
    app:border_width="0dp"
    />

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:weightSum="2"
    >
    <TextView
        android:id="@+id/activity_popularize_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="快来加入我们的大家庭吧"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        />
</LinearLayout>

</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/activity_popularize_ll_1"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/activity_popularize_iv_erweima"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击二维码保存到本地"
        android:layout_below="@+id/activity_popularize_iv_erweima"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        />

    <ProgressBar
        android:id="@+id/activity_popularize_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        />

</RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/mine_share"
    android:scaleType="fitXY"
    android:layout_below="@+id/activity_popularize_rl_actionbar"

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="7.1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快来分享'拇指营销'寻找你的成员吧"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginLeft="60dp"
                android:textSize="@dimen/textsize_x"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="立即成为我的成员"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_x"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            />

    </LinearLayout>
</RelativeLayout>