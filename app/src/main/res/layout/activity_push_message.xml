<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_actionbar"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/messagea_iv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/takeout_ic_back_pressed"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息中心"
        android:layout_centerInParent="true"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/textsize_actionbar"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_x"
        android:background="@color/line_sq"
        />
    <TextView
        android:id="@+id/activity_push_message_tv_erro"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:text="网络异常"
        android:textSize="@dimen/textsize_x"
        android:textColor="@color/textcolor_hui"
        android:gravity="center"
        android:visibility="gone"
        />
    <ListView
        android:id="@+id/activity_push_message_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        ></ListView>
</LinearLayout>