<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    >
    <LinearLayout
        android:id="@+id/vp_compile_page8_ll_nowifi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#FF8600"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="未连接网络"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/textsize_x"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/vp_compile_page8_tvnull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        />
    <com.wangdao.our.spread_2.widget_pull.PullToRefreshScrollView
        android:id="@+id/vp_compile_page8_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/vp_compile_page8_pull"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
    </com.wangdao.our.spread_2.widget_pull.PullToRefreshScrollView>
</LinearLayout>