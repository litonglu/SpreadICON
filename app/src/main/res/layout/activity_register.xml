<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_actionbar"
        android:background="@color/colorPrimary"
        >
    <ImageView
        android:id="@+id/activity_register_iv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/takeout_ic_back_pressed"
        android:layout_centerVertical="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员注册"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/text_color_white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_register_et_tel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入手机号码"
        android:layout_margin="15dp"
        android:background="@color/line_q"
        android:paddingLeft="10dp"
        android:textColor="#C6C6C6"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/activity_register_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入手机密码"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_q"
        android:paddingLeft="10dp"
        android:textColor="#C6C6C6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/activity_register_et_vf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="验证码"
            android:background="@color/line_q"
            android:paddingLeft="10dp"
            />
    <Button
        android:id="@+id/activity_register_et_send"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:text="获取验证码"
        android:background="@drawable/shape_sure_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_color_white"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="未验证"
            android:gravity="center"
            android:textSize="@dimen/textsize_x"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/activity_register_bt_sendvf"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:text="获取图形验证码"
            android:background="@drawable/shape_sure_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_white"
            android:visibility="gone"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/activity_register_et_it"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="输入邀请码(选填)"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_q"
        android:paddingLeft="10dp"
        android:textColor="#C6C6C6"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/activity_register_bt_okr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定注册"
        android:textColor="@color/text_color_white"
        android:background="@drawable/shape_sure_btn_blue"
        android:textSize="@dimen/textsize_x"
        android:layout_margin="15dp"
        />
</LinearLayout>