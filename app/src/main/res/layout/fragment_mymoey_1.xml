<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的佣金:\t\t"
                android:textSize="@dimen/textsize_actionbar"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/fragment_mymoney_1_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0.00"
                android:textSize="26sp"
                android:textColor="@color/ebpay_red"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_x"
        android:background="@color/line_q"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/fragment_mymoney_1_tv_erro"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="网络异常"
        android:gravity="center"
        android:textColor="@color/textcolor_hui"
        android:visibility="gone"
        />

    <ListView
        android:id="@+id/fragment_mymoney_1_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        ></ListView>
</LinearLayout>