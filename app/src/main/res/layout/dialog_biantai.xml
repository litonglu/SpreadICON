<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
    android:layout_width="340dp"
    android:layout_height="170dp"
    android:background="@drawable/shape_sure_btn_dialog_kong"

    >
<RelativeLayout
    android:id="@+id/dialog_biantai_ll_main"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    >

    <TextView
    android:id="@+id/dialog_biantai_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="结果!"
    android:layout_centerInParent="true"
    android:textColor="@color/colorPrimary"
    android:textSize="22sp"
    />
</RelativeLayout>
<View
    android:id="@+id/dialog_biantai_line_1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_x"
    android:background="@color/line_s"
    android:layout_below="@+id/dialog_biantai_ll_main"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_biantai_ll_main"
        >

        <TextView
            android:id="@+id/dialog_biantai_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="@dimen/textsize_x"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>