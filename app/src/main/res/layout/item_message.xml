<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/item_message_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginLeft="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/item_messager_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友成功"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_x"
            android:textColor="@color/textcolor_hui"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item_messager_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-02-02"
            android:textColor="@color/textcolor_hui"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_messager_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="乱七八糟的一"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize_xx"
        android:layout_marginRight="10dp"
        />
</LinearLayout>
</LinearLayout>


</LinearLayout>