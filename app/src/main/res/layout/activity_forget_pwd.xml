<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_actionbar"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/activity_forget_pwd_iv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/takeout_ic_back_pressed"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置密码"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/textsize_actionbar"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
    <EditText
        android:id="@+id/activity_forget_pwd_et_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_mine_line"
        android:hint="请输入手机号码"
        android:layout_margin="15dp"
        android:background="@color/line_qq"
        android:paddingLeft="10dp"
        android:textColor="#C6C6C6"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/activity_forget_pwd_et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="验证码"
            android:background="@color/line_qq"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/activity_forget_pwd_bt_getcode"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:text="获取验证码"
            android:background="@drawable/shape_sure_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_white"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/activity_forget_pwd_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_mine_line"
        android:hint="请输入密码"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_qq"
        android:paddingLeft="10dp"
        android:textColor="#C6C6C6"
        android:layout_marginTop="20dp"
        />
    <Button
       android:id="@+id/activity_forget_pwd_bt_repwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="重置密码"
        android:textColor="@color/text_color_white"
        android:background="@drawable/shape_sure_btn_blue"
        android:textSize="@dimen/textsize_x"
        android:layout_margin="15dp"
        />

</LinearLayout>