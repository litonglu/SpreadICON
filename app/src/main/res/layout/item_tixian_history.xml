<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/item_tixian_history_tv_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="2012-02-01\t22:12"
            android:textColor="@color/textcolor_hui"
            android:textSize="@dimen/textsize_x"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_tixian_history_tv_money"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="22.0"
            android:gravity="center"
            android:textColor="@color/ebpay_red"
            />
        <TextView
            android:id="@+id/item_tixian_history_tv_tag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/textsize_xx"
            android:background="@drawable/shape_sure_btn_green"
            android:textColor="@color/white"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            />
        <TextView
            android:id="@+id/item_tixian_history_tv_account"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="LYJONE2"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/item_tixian_history_tv_state"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="成功"
            android:gravity="center"
            android:textColor="@color/color_money"
            />
    </LinearLayout>
</LinearLayout>