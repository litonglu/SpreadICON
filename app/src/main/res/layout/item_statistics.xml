<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/text_color_white"
        >

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >

    <com.wangdao.our.spread_2.slide_widget.widget_image.RoundedImageView
        android:id="@+id/item_statistics_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/moren"
        android:layout_margin="6dp"
        android:scaleType="fitXY"
        app:corner_radius="8dp"
        app:border_width="0.5dp"
        app:oval="false"
        app:border_color="@color/line_s"
        />

</RelativeLayout>

        <TextView
            android:id="@+id/item_statistics_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3æ¬¡"
            android:gravity="center"
            android:textColor="@color/textcolor_hui"
            />
        <TextView
            android:id="@+id/item_statistics_dianji"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/textcolor_hui"
            android:text="-"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_statistics_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2016-04-21\t10:18:22"
            android:gravity="center"
            android:textColor="@color/textcolor_hui"
            />
    </LinearLayout>
</LinearLayout>