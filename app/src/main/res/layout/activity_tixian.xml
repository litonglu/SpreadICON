<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_qq"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_actionbar"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/activity_tixian_iv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/takeout_ic_back_pressed"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/activity_tixian_tv_actiobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现到：微信"
            android:textSize="@dimen/textsize_actionbar"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_mine_line"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="我的资金"
    android:textColor="@color/textcolor_hui"
    android:textSize="@dimen/textsize_x"
    android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/activity_tixian_tv_allmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/textsize_actionbar"
            android:textColor="@color/color_money"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_mine_line"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="0.2dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现金额"
            android:textColor="@color/textcolor_hui"
            android:textSize="@dimen/textsize_x"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <EditText
            android:id="@+id/activity_tixian_et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="提现不低于一元"
            android:inputType="number"
            android:textColor="@color/line_s"
            android:textSize="@dimen/textsize_x"
            android:layout_marginRight="10dp"
            android:gravity="right"

        />
    </LinearLayout>
    
    <Button
        android:id="@+id/activity_tixian_bt_tixian"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="立即提现"
        android:textSize="@dimen/textsize_actionbar"
        android:textColor="@color/white"
        android:background="@drawable/shape_sure_btn_blue"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>