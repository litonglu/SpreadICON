<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

<RelativeLayout
    android:layout_width="340dp"
    android:layout_height="170dp"
    android:background="@drawable/shape_sure_btn_dialog_kong"

    >
<RelativeLayout
    android:id="@+id/dialog_logout_ll_main"
    android:layout_width="match_parent"
    android:layout_height="130dp"

    >
<TextView
    android:id="@+id/dialog_logout_tv_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="注销登录？"
    android:layout_centerInParent="true"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/textsize_actionbar"
    />
</RelativeLayout>
<View
    android:id="@+id/dialog_logout_line_1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_x"
    android:background="@color/line_s"
    android:layout_below="@+id/dialog_logout_ll_main"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/dialog_logout_line_1"
        >
        <TextView
            android:id="@+id/dialog_logout_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="是"
            android:textSize="@dimen/textsize_actionbar"
            android:gravity="center"
            />
        <View
            android:layout_width="@dimen/line_x"
            android:layout_height="match_parent"
            android:background="@color/line_s"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/dialog_logout_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="否"
            android:textSize="@dimen/textsize_actionbar"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>